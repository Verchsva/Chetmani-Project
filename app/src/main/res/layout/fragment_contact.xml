                <ImageView
                    android:id="@+id/iv_phone_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_contact_details"
                    app:layout_constraintStart_toEndOf="@+id/tv_contact_number_1"
                    android:layout_marginTop="24dp"
                    android:padding="8dp"
                    android:background="@drawable/contact"
                    android:layout_marginStart="92dp"
                    app:layout_constraintEnd_toStartOf="@id/iv_whatsapp_1"
                    android:src="@drawable/ic_baseline_local_phone_24"/>

                <ImageView
                    android:id="@+id/iv_whatsapp_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/contact"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/whhhhh"
                    app:layout_constraintStart_toEndOf="@id/iv_phone_1"
                    app:layout_constraintTop_toBottomOf="@+id/tv_contact_details" />

