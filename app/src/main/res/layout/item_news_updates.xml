<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView android:id="@+id/cv_updates"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:elevation="10dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFF88">

        <TextView
            android:id="@+id/tv_updates_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Important"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_updates_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_updates_heading"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingTop="10dp"
            android:text="New Stock of Mrdx is updated. Kindly check once.New Stock of Mrdx is updated. Kindly check once.New Stock of Mrdx is updated. Kindly check once."
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tv_updates_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_updates_description"
            android:text="9th July 2020 , 09:45 AM"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingTop="4dp"
            android:paddingLeft="10dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>